<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.SpinnerValueFactory.IntegerSpinnerValueFactory?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>

<VBox maxWidth="1.7976931348623157E308" maxHeight="1.7976931348623157E308">
	<children>
		<ScrollPane fitToWidth="true" maxWidth="1.7976931348623157E308"
			maxHeight="1.7976931348623157E308">
			<content>
				<VBox spacing="5" xmlns="http://javafx.com/javafx/8.0.111"
					xmlns:fx="http://javafx.com/fxml/1" maxHeight="1.7976931348623157E308"
					maxWidth="1.7976931348623157E308">
					<children>
						<TitledPane text="General">
							<content>
								<VBox spacing="5.0">
									<children>
										<HBox spacing="5.0">
											<children>
												<Label maxHeight="1.7976931348623157E308" text="SA-MP Path" />
												<TextField fx:id="sampPathTextField" maxWidth="1.7976931348623157E308"
													promptText="Will be automatically detected if left empty"
													HBox.hgrow="ALWAYS" />
											</children>
										</HBox>
										<CheckBox fx:id="notifyServerOnStartupCheckBox"
											mnemonicParsing="false" text="Notify Server on startup" />
										<CheckBox fx:id="rememberLastViewCheckBox"
											mnemonicParsing="false" text="Remember last view" />
									</children>
								</VBox>
							</content>
						</TitledPane>
						<!-- TODO(MSC) Invisible since this isn't implemented yet> <TitledPane 
							text="Connection"> <content> <VBox> <children> <CheckBox fx:id="askForUsernameOnConnectCheckBox" 
							mnemonicParsing="false" text="Always ask for Username when connecting to 
							a server" /> </children> </VBox> </content> </TitledPane -->
						<TitledPane text="SA-MP (Requires SA-MP restart to take effect)">
							<content>
								<VBox spacing="5.0">
									<children>
										<GridPane hgap="5.0" vgap="5.0">
											<columnConstraints>
												<ColumnConstraints hgrow="NEVER" />
												<ColumnConstraints hgrow="ALWAYS"
													maxWidth="1.7976931348623157E308" />
											</columnConstraints>
											<rowConstraints>
												<RowConstraints vgrow="SOMETIMES" />
												<RowConstraints vgrow="SOMETIMES" />
											</rowConstraints>
											<children>
												<Label maxHeight="1.7976931348623157E308" text="FPS Limit" />
												<Label maxHeight="1.7976931348623157E308" text="PageSize"
													GridPane.rowIndex="1" />
												<Spinner fx:id="fpsLimitSpinner" maxWidth="70.0"
													GridPane.columnIndex="1">
													<valueFactory>
														<SpinnerValueFactory.IntegerSpinnerValueFactory
															max="90" min="20" />
													</valueFactory>
												</Spinner>
												<Spinner fx:id="pageSizeSpinner" maxWidth="70.0"
													GridPane.columnIndex="1" GridPane.rowIndex="1">
													<valueFactory>
														<SpinnerValueFactory.IntegerSpinnerValueFactory
															max="20" min="10" />
													</valueFactory>
												</Spinner>
											</children>
										</GridPane>
										<CheckBox fx:id="audioproxyCheckBox" mnemonicParsing="false"
											text="Don't use System Proxy for Audiostreams" />
										<CheckBox fx:id="timestampsCheckBox" mnemonicParsing="false"
											text="Chat Timestamps" />
										<CheckBox fx:id="multicoreCheckbox" mnemonicParsing="false"
											text="Multicore usage" />
										<CheckBox fx:id="audioMsgOffCheckBox"
											mnemonicParsing="false" text="Turn Audiostream messages off" />
										<CheckBox fx:id="disableHeadMoveCheckBox"
											mnemonicParsing="false" text="Turn off head movement" />
										<CheckBox fx:id="imeCheckBox" mnemonicParsing="false"
											text="Input method text editing and language switching" />
										<CheckBox fx:id="directModeCheckBox" mnemonicParsing="false"
											text="Directmode (Fix chat text drawing problems)" />
										<CheckBox fx:id="noNameTagStatusCheckBox"
											mnemonicParsing="false" text="Disable AFK Status Symbol" />
									</children>
								</VBox>
							</content>
						</TitledPane>
						<TitledPane text="Appearance">
							<content>
								<VBox>
									<children>
										<HBox maxWidth="1.7976931348623157E308">
											<children>
												<CheckBox fx:id="darkThemeCheckBox"
													mnemonicParsing="false" text="Use dark theme" />
												<Label styleClass="beta-sign" text="BETA" />
											</children>
										</HBox>
									</children>
								</VBox>
							</content>
						</TitledPane>
						<TitledPane text="Permissions">
							<content>
								<VBox spacing="5.0">
									<children>
										<CheckBox fx:id="allowCloseSampCheckBox"
											mnemonicParsing="false"
											text="Allow this application to shut down San Andreas Multiplayer Client" />
										<CheckBox fx:id="allowCloseGtaCheckBox"
											mnemonicParsing="false"
											text="Allow this application to shut down Grand Theft Auto: San Andreas" />
									</children>
								</VBox>
							</content>
						</TitledPane>
						<TitledPane text="Updates">
							<content>
								<VBox spacing="5.0">
									<children>
										<CheckBox fx:id="showChangelogCheckBox"
											mnemonicParsing="false"
											text="Show Changelog after the application has been updated" />
									</children>
								</VBox>
							</content>
						</TitledPane>
					</children>
				</VBox>
			</content>
		</ScrollPane>
		<ButtonBar VBox.vgrow="NEVER" minHeight="40">
			<buttons>
				<Button onAction="#restoreDefaults" alignment="CENTER_RIGHT" text="Restore to default" />
			</buttons>
			<padding>
				<Insets bottom="-5" />
			</padding>
		</ButtonBar>
	</children>
</VBox>
